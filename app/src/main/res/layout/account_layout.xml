<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark">

    <LinearLayout
        android:id="@+id/accountLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/allFilmsTextView"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_medium"
            android:text="Никнейм"
            android:textColor="@color/light"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Любимых фильмов"
            android:textColor="@color/light"
            android:fontFamily="@font/montserrat_regular"/>
    </LinearLayout>


    <ImageButton
        android:id="@+id/allFilms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="35dp"
        android:layout_marginBottom="18dp"
        android:adjustViewBounds="true"
        android:background="?android:attr/selectableItemBackground"
        android:maxWidth="35dp"
        android:maxHeight="35dp"
        android:scaleType="fitCenter"
        android:src="@drawable/all_films" />

    <ImageButton
        android:id="@+id/favoriteFilms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/heart"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:maxWidth="35dp"
        android:maxHeight="35dp" />

    <ImageButton
        android:id="@+id/cinemasLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="35dp"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/marker"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:maxWidth="40dp"
        android:maxHeight="40dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/allFilms"
        android:layout_marginBottom="18dp"
        android:background="@color/light_grey" />

</RelativeLayout>
